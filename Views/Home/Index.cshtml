}

<!--You need to pass in the EntriesViewModel so you can pass in two pieces of information, the Entries part, and the PageInfo part-->
@model EntriesViewModel


@foreach (Book b in Model.Entries)
{
    <!-- This is an example of how you can pull data from the model. Look at "pulling data" video at 5:00 -->
    <div class="bg-faded p-1" style="border: solid black 2px; border-radius: 10px; background-color: snow;">
        <h3>
            @b.Title
            <span style="float: right; border: solid black 1px; border-radius: 10px; background-color: #1E90FF; ">
                <small>$@b.Price</small>
            </span>
        </h3>

        <div class="card-text p-1">Author: @b.Author</div>
        <div class="card-text p-1">Publisher: @b.Publisher</div>
        <div class="card-text p-1">ISBN: @b.Isbn</div>
        <div class="card-text p-1">Classification: @b.Classification</div>
        <div class="card-text p-1">Category: @b.Category</div>

    </div>
    <br />
}

