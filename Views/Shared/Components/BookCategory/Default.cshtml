@{
}

@model IEnumerable<string>

@* IEnumerable Makes the data easy to iterate through*@

@*first link will allow user to go to home page*@
<div class="d-grid gap-2">

    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @*Build links for each book category for the user to click on and then filter the books*@
    @foreach (string bc in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@bc" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedCategory == bc
            ? "btn-primary"                            @*If the category is clicked it will be a primary highlighted bootstrap button*@
            : "btn btn-outline-secondary")">@bc</a>    @*if the category is not selected, it will be a secondary button*@
        }

</div>